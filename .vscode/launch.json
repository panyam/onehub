    "version": "0.2.0",
    "configurations": [
      {
          "name": "Launch file",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "cmd/backend/server.go",
          "cwd": "${workspaceFolder}",
          "dlvFlags": ["--check-go-version=false"]
      }
      ,{
          "name": "Launch Sync",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "cmd/dbsync/server.go",
          "cwd": "${workspaceFolder}",
          "dlvFlags": ["--check-go-version=false"],
          "env": { "POSTGRES_PORT": "54321" }
      }
      ,{
            "name": "Remote Debugger - OneHub Backend",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 9091,
            "showLog": true,
            "host": "127.0.0.1"
      }
      ,{
            "name": "Remote Debugger - OneHub HTMX FE",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 9092,
            "showLog": true,
            "host": "127.0.0.1"
      }
      ,{
            "name": "Remote Debugger - DBSync",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 9093,
            "showLog": true,
            "host": "127.0.0.1"
      }
    ]
}
